<style>
	article {
		max-width: 40rem;
		margin-inline: auto;
		padding-top: 5rem;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 1.5rem;
	}

	article > :global(*) {
		max-width: 50ch;
		margin-top: 0 !important;
	}

	small {
		color: var(--sl-color-gray-3);
	}

	svg {
		width: 15rem;
	}

	ul.links {
		list-style: none;
		display: flex;
		gap: 1.5rem;
		padding: 0;
		margin-top: 1rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	ul.links li {
		margin: 0;
	}
</style>
